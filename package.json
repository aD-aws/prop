{
  "name": "uk-home-improvement-platform",
  "version": "1.0.0",
  "description": "UK Home Improvement Platform with AI-powered SoW generation",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:lambda": "tsc && npm run package:lambda",
    "package:lambda": "cd dist && zip -r ../lambda-deployment.zip . && cd ..",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/simple-server.ts",
    "dev:full-app": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=\"src/__tests__/(models|services|middleware)\" --testTimeout=30000",
    "test:integration": "jest --testPathPattern=\"src/__tests__/integration\" --testTimeout=60000",
    "test:api": "jest --testPathPattern=\"src/__tests__/api-coverage\" --testTimeout=45000",
    "test:security": "jest --testPathPattern=\"src/__tests__/security\" --testTimeout=30000",
    "test:performance": "jest --testPathPattern=\"src/__tests__/performance\" --testTimeout=300000",
    "test:compliance": "jest --testPathPattern=\"src/__tests__/compliance\" --testTimeout=90000",
    "test:all": "./scripts/run-all-tests.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "frontend:install": "cd frontend && npm install",
    "frontend:start": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "frontend:test:a11y": "cd frontend && npm test -- --testPathPattern=\"__tests__/accessibility\" --watchAll=false",
    "dev:full": "concurrently \"npm run dev\" \"npm run frontend:start\"",
    "build:full": "npm run build && npm run frontend:build"
  },
  "dependencies": {
    "@aws-sdk/client-bedrock-runtime": "^3.450.0",
    "@aws-sdk/client-dynamodb": "^3.450.0",
    "@aws-sdk/client-s3": "^3.450.0",
    "@aws-sdk/client-ses": "^3.864.0",
    "@aws-sdk/client-textract": "^3.450.0",
    "@aws-sdk/lib-dynamodb": "^3.450.0",
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "redis": "^4.6.10",
    "serverless-http": "^3.2.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.143",
    "@types/bcryptjs": "^2.4.6",
    "@types/cheerio": "^0.22.35",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-validator": "^2.20.33",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "artillery": "^2.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2",
    "wait-on": "^7.2.0"
  },
  "keywords": [
    "home-improvement",
    "construction",
    "uk-building-regulations",
    "aws-bedrock",
    "dynamodb"
  ],
  "author": "UK Home Improvement Platform Team",
  "license": "MIT"
}
